{
    "name": "php-mqtt/client",
    "description": "An MQTT client written in and for PHP.",
    "type": "library",
    "keywords": [
        "mqtt",
        "client",
        "publish",
        "subscribe"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Namoshek",
            "email": "namoshek@gmx.at",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "PhpMqtt\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "psr/log": "^1.1",
        "myclabs/php-enum": "^1.7",
        "opis/closure": "^3.5"
    },
    "require-dev": {
        "phpunit/php-invoker": "^3.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "suggest": {
        "ext-redis": "Required for the RedisRepository"
    },
    "scripts": {
        "fix:cs": "vendor/bin/phpcbf",
        "test": [
            "@test:cs",
            "@test:unit",
            "@test:feature"
        ],
        "test:cs": "vendor/bin/phpcs",
        "test:feature": "vendor/bin/phpunit --testsuite Feature",
        "test:unit": "vendor/bin/phpunit --testsuite Unit"
    }
}
